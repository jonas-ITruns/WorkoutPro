<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/weiss"
    android:fitsSystemWindows="false"
    android:gravity="center_vertical">

        <Button
            android:id="@+id/btnName"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="2dp"
            android:singleLine="true"
            android:text="Name"
            android:textAllCaps="false"
            android:textColor="@color/dunkelblau"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMuskelgruppe"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColor="@color/dunkelblau"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Muskelgruppe"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/btnName"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBeschreibung"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="2dp"
            android:singleLine="true"
            android:text="Beschreibung"
            android:textAllCaps="false"
            android:textColor="@color/dunkelblau"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btnMuskelgruppe"
            app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>