<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMittlererBereich"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/hellgrau_Hintergrund"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/btnInfoOk"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Ok"
        android:textColor="@color/dunkelblau"
        android:textStyle="bold"
        android:tint="@color/dunkelblau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo6"
        app:srcCompat="@drawable/ic_check_black_24dp" />

    <TextView
        android:id="@+id/tvAlertUeberschrift"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/grau_Hintergrund"
        android:gravity="center_vertical|center_horizontal"
        android:text="Workout Übersicht Info"
        android:textColor="@color/dunkelblau"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInfoOk"
        app:srcCompat="@color/transparent" />

    <TextView
        android:id="@+id/tvInfo1"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:text="Drücke auf das Plus-Symbol, um ein neues Workout zu erstellen."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlertUeberschrift" />

    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:text="Drücke auf das Play-Symbol, um dein Workout zu starten."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo1" />

    <TextView
        android:id="@+id/tvInfo3"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:text="Drücke auf das Options-Symbol, um weitere Optionen für dein Workout anzuzeigen."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo2" />

    <TextView
        android:id="@+id/tvInfo4"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:text="Drücke auf das Stift-Symbol, um dein Workout bearbeiten zu können."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo3" />

    <TextView
        android:id="@+id/tvInfo5"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:text="Drücke auf das Titel-Symbol, um den Namen deines Workouts ändern zu können."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo4" />

    <TextView
        android:id="@+id/tvInfo6"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:text="Drücke auf das Löschen-Symbol, um dein Workout löschen zu können."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo5" />

    <ImageView
        android:id="@+id/imgvInfo1"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="25dp"
        android:tint="@color/dunkelblau"
        app:layout_constraintEnd_toStartOf="@+id/tvInfo1"
        app:layout_constraintTop_toBottomOf="@+id/tvAlertUeberschrift"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <ImageView
        android:id="@+id/imgvInfo2"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="30dp"
        android:tint="@color/dunkelblau"
        app:layout_constraintEnd_toStartOf="@+id/tvInfo2"
        app:layout_constraintTop_toBottomOf="@+id/imgvInfo1"
        app:srcCompat="@drawable/ic_play_arrow" />

    <ImageView
        android:id="@+id/imgvInfo3"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="30dp"
        android:tint="@color/dunkelblau"
        app:layout_constraintEnd_toStartOf="@+id/tvInfo3"
        app:layout_constraintTop_toBottomOf="@+id/imgvInfo2"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    <ImageView
        android:id="@+id/imgvInfo4"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:tint="@color/dunkelblau"
        app:layout_constraintEnd_toStartOf="@+id/tvInfo4"
        app:layout_constraintTop_toBottomOf="@+id/imgvInfo3"
        app:srcCompat="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/imgvInfo6"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:tint="@color/dunkelblau"
        app:layout_constraintEnd_toStartOf="@+id/tvInfo6"
        app:layout_constraintTop_toBottomOf="@+id/imgvInfo5"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

    <ImageView
        android:id="@+id/imgvInfo5"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:tint="@color/dunkelblau"
        app:layout_constraintEnd_toStartOf="@+id/tvInfo5"
        app:layout_constraintTop_toBottomOf="@+id/imgvInfo4"
        app:srcCompat="@drawable/ic_title_black_24dp" />

</android.support.constraint.ConstraintLayout>