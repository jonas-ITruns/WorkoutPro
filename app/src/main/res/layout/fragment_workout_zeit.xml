<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="false">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clMittlererBereich"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_marginTop="60dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/clUntererBereich"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:context=".Startseite">

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/clWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="app.android.SignInActivity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/clWorkout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:context="app.android.SignInActivity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnWorkout1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/dunkelblau"
                    android:text="Workout Name"
                    android:textColor="@color/weiss"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnWorkout1Start"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="Start"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/btnWorkout1Edit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout1" />

                <Button
                    android:id="@+id/btnWorkout1Edit"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="Edit"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnWorkout1Start"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout1" />

                <Button
                    android:id="@+id/btnWorkout1Rename"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="rename"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/btnWorkout1Delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout1Start" />

                <Button
                    android:id="@+id/btnWorkout1Delete"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="delete"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnWorkout1Rename"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout1Edit" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/clWorkout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:context="app.android.SignInActivity"
                app:layout_constraintTop_toBottomOf="@id/clWorkout1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnWorkout2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/dunkelblau"
                    android:text="Workout Name"
                    android:textColor="@color/weiss"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnWorkout2Start"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="Start"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/btnWorkout2Edit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout2" />

                <Button
                    android:id="@+id/btnWorkout2Edit"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="Edit"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnWorkout2Start"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout2" />

                <Button
                    android:id="@+id/btnWorkout2Rename"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="rename"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/btnWorkout2Delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout2Start" />

                <Button
                    android:id="@+id/btnWorkout2Delete"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="delete"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnWorkout2Rename"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout2Edit" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/clWorkout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    tools:context="app.android.SignInActivity"
                    app:layout_constraintTop_toBottomOf="@id/clWorkout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/btnWorkout3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@color/dunkelblau"
                        android:text="Workout Name"
                        android:textColor="@color/weiss"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnWorkout3Start"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="Start"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/btnWorkout3Edit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout3" />

                <Button
                    android:id="@+id/btnWorkout3Edit"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="Edit"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnWorkout3Start"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout3" />

                <Button
                    android:id="@+id/btnWorkout3Rename"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="rename"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/btnWorkout3Delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout3Start" />

                <Button
                    android:id="@+id/btnWorkout3Delete"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/grau_Hintergrund"
                    android:text="delete"
                    android:textColor="@color/dunkelblau"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnWorkout3Rename"
                    app:layout_constraintTop_toBottomOf="@+id/btnWorkout3Edit" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clUntererBereich"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnAddWorkout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Workout hinzufügen"
            android:textColor="@color/weiss"
            android:background="@color/dunkelblau"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>