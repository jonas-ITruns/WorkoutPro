<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="163dp"
    android:background="@color/transparent"
    android:fitsSystemWindows="false"
    android:gravity="center_vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    tools:context="com.developer.workoutpro.itruns.workoutpro.MainClass">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clObererBereichUebersicht"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dunkelblau"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clPadding"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:paddingRight="160dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvWorkoutName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical|start"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingStart="15dp"
                    android:singleLine="true"
                    android:text="Workout Name"
                    android:textColor="@color/weiss"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/imgvStrich"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/weiss"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clPadding" />

            <ImageButton
                android:id="@+id/imgbtnWorkoutStart"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:tint="@color/weiss"
                app:layout_constraintEnd_toStartOf="@+id/imgbtnWorkoutMenue"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_play_arrow" />

            <ImageButton
                android:id="@+id/imgbtnWorkoutMenue"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:tint="@color/weiss"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />

            <ImageButton
                android:id="@+id/btnBearbeiten"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/ic_edit"
                android:tint="@color/weiss"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/imgvStrich"
                app:layout_constraintEnd_toStartOf="@+id/imgbtnWorkoutMenue"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnUmbennen"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/ic_rename"
                android:tint="@color/weiss"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/imgvStrich"
                app:layout_constraintEnd_toStartOf="@+id/btnBearbeiten"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnLoeschen"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/ic_delete_black_24dp"
                android:tint="@color/weiss"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/imgvStrich"
                app:layout_constraintEnd_toStartOf="@+id/btnUmbennen"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>


        <TextView
            android:id="@+id/tvWorkoutArt"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/grau_Hintergrund"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Muskelfokus"
            android:textColor="@color/dunkelgrau"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clObererBereichUebersicht" />

        <TextView
            android:id="@+id/tvUebungenWert"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/grau_Hintergrund"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="20"
            android:textColor="@color/dunkelgrau"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWorkoutlUebungen" />

        <TextView
            android:id="@+id/tvWorkoutArtWert"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/grau_Hintergrund"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Arme"
            android:textColor="@color/dunkelgrau"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWorkoutArt" />

        <TextView
            android:id="@+id/tvWorkoutDauer"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/grau_Hintergrund"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Zeit"
            android:textColor="@color/dunkelgrau"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvWorkoutlUebungen"
            app:layout_constraintStart_toEndOf="@+id/tvWorkoutArt"
            app:layout_constraintTop_toBottomOf="@+id/clObererBereichUebersicht" />

        <TextView
            android:id="@+id/tvWorkoutlUebungen"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/grau_Hintergrund"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Ãœbungen"
            android:textColor="@color/dunkelgrau"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clObererBereichUebersicht" />

        <TextView
            android:id="@+id/tvZeitWert"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/grau_Hintergrund"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="10:00"
            android:textColor="@color/dunkelgrau"
            app:layout_constraintEnd_toStartOf="@+id/tvUebungenWert"
            app:layout_constraintStart_toEndOf="@+id/tvWorkoutArtWert"
            app:layout_constraintTop_toBottomOf="@+id/tvWorkoutDauer" />

    </android.support.constraint.ConstraintLayout>

</TableRow>